    <link rel='stylesheet' href='/assets/base.css'>
    <link rel='stylesheet' href='/assets/main.css'>
    <link rel='stylesheet' href='/assets/form.css'>
    <script type="module" crossorigin="anonymous" src="http://localhost:5173/src/main.js" defer></script>
    {% else %}
    <link rel="stylesheet" href="/assets/main.css" />
    <script type="module" src="/assets/main.js" defer></script>
    <script src="/socket.io/socket.io.js" defer></script>
    {# <script type="nomodule" src="/polyfills-legacy.js" defer></script>
    <script type="nomodule" src="/main-legacy.js" defer></script> #}
    {% endif %}
    {% block styles %}
    {% endblock %}
    {% block scripts %}
    {% endblock %}
  </head>

  <body>
    {% include './partials/nav.njk' %}
