{
  "name": "api-2324",
  "version": "1.0.0",
  "description": "In dit vier weken durende vak zullen we de kracht van het web ervaren en kijken hoe we (mobiele) web apps kunnen maken die\nnet zo aantrekkelijk zijn als native mobiele apps.",
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@9.1.1",
  "engines.node": "22",
  "scripts": {
    "dev": "pnpm dev:client & pnpm dev:server",
    "dev:server": "nodemon --inspect server/server.js -w server/ server/views",
    "devOld": "NODE_ENV=development npm-run-all --parallel dev:*",
    "dev:client": "vite --config vite.config.js",
    "start": "NODE_ENV=production node server/server.js",
    "build": "pnpm build:server && pnpm build:client",
    "build:server": "vite build --ssr server/server.js",
    "build:client": "vite build --emptyOutDir false --ssrManifest",
    "lint": "eslint . --ext .js,.liquid",
    "format": "prettier --write src/ server/"
  },
  "dependencies": {
    "@tinyhttp/app": "^2.2.3",
    "@tinyhttp/logger": "^2.0.0",
    "api-2324": "link:",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-nunjucks": "^3.1.2",
    "express-session": "^1.18.0",
    "jsonwebtoken": "^9.0.2",
    "liquidjs": "^10.12.0",
    "mongoose": "^8.3.3",
    "multer": "1.4.5-lts.1",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^8.0.0",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "vite": "^5.2.11",
    "vite-plugin-eslint": "^1.8.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rushstack/eslint-patch": "^1.10.2",
    "chokidar": "^3.6.0",
    "eslint": "^8.57.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "sirv": "^2.0.4",
    "vite-express": "^0.16.0"
  }
}