{% extends  'base.njk' %}
{% block  content %}
<section class="form-container">
  <h3>Let us know how you managed minor WebDev</h3>
  <form action='/register' method="POST" enctype="multipart/form-data">
    <div id='register-error'>
      {% if error %}
      {{ error }}
      {% endif %}
      {% if message %}
      {{ message }}
      {% endif %}
    </div>
    <label class="input-group" for='name'>
      <span>Name</span>
      <input type='text' name='name' id='name' required placeholder='Your Name'>
      {{ user.name }}
    </label>
    <label class="input-group" for='email'>
      <span> Email {{ user.email }} </span>
      <input type='email' name='username' id='email' required autocomplete="email"
             title="Please provide only @hva.nl email address" placeholder="your.email@hva.nl">

    </label>
    <label class="input-group" for='password'>
      <span> Password {{ user.email }} </span>
      <input type="password" name="password" id="password" placeholder="****"
             autocomplete="new-password" />
    </label>
    <button type='submit'>Create Account</button>
  </form>
  <div class='redirect'>
    <p>Already have an account?</p>
    <a href='/login'>
      <small>login here</small>
    </a>
  </div>
</section>
{% endblock %}